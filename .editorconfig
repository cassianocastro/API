root = true

[*]
charset                  = utf-8
end_of_line              = lf
indent_style             = space
indent_size              = 4
#tab_width               = 4
insert_final_newline     = false
trim_trailing_whitespace = true

[*.{xml,html,yaml}]
indent_size  = 2
#tab_width  = 2

[src/public/html/includes/*.inc]
indent_size = 2
#tab_width  = 2

[src/public/html/*.php]
indent_size = 2
#tab_width  = 2