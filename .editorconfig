root = true

[*]
charset                  = utf-8
end_of_line              = lf
indent_style             = tab
insert_final_newline     = false
trim_trailing_whitespace = true

[*.{yml,yaml}]
indent_style = space
indent_size  = 4

[*.{php,inc,htaccess,json,js,css,less}]
indent_size = 4
#tab_width  = 4

[*.html]
indent_size = 2
#tab_width  = 2

[src/public/html/**.php]
indent_size = 2
#tab_width  = 2